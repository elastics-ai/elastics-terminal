# Elastics Terminal Environment Variables Configuration
# Copy this file to .env and update with your actual values

# ================================
# Azure AD Authentication
# ================================
# Required for production Azure AD authentication
# Leave empty for local development mode (uses wojciech@elastics.ai)

# Azure AD Application (Client) ID
AUTH_AZURE_AD_CLIENT_ID=

# Azure AD Client Secret (from app registration)
AUTH_AZURE_AD_CLIENT_SECRET=

# Azure AD Tenant ID (your organization's tenant)
AUTH_AZURE_AD_TENANT_ID=

# NextAuth.js Configuration
# Generate a random secret for production: openssl rand -base64 32
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Base URL for your application
NEXTAUTH_URL=http://localhost:3000

# Set to 'true' to enable Azure AD authentication in frontend
# Set to 'false' or leave empty for local development mode  
NEXT_PUBLIC_AZURE_AD_ENABLED=false

# ================================
# Application Configuration
# ================================

# Anthropic API Key for Claude AI features
ANTHROPIC_API_KEY=

# ================================
# Error Tracking (GlitchTip)
# ================================

# GlitchTip DSN for error tracking (optional)
GLITCHTIP_DSN=

# GlitchTip Database Configuration
POSTGRES_USER=glitchtip
POSTGRES_PASSWORD=glitchtip
POSTGRES_DB=glitchtip

# GlitchTip Django Configuration
SECRET_KEY=your-secret-key-here
DATABASE_URL=postgres://glitchtip:glitchtip@postgres:5432/glitchtip
REDIS_URL=redis://redis:6379
CELERY_BROKER_URL=redis://redis:6379

# ================================
# Azure Deployment Configuration
# ================================
# These are used for Azure Container Apps deployment

# Enable Azure deployment mode (uses different auth flow)
AZURE_DEPLOYMENT=false

# Basic auth credentials for Azure deployment (fallback)
BASIC_AUTH_EMAIL=wojciech@elastics.ai
BASIC_AUTH_PASSWORD=demo123!

# ================================
# Local Development Notes
# ================================
# 
# For local development:
# 1. Leave Azure AD variables empty
# 2. Set NEXT_PUBLIC_AZURE_AD_ENABLED=false
# 3. Use wojciech@elastics.ai or wojtek@elastics.ai for login
# 4. Any password works in development mode
#
# For Azure AD production:
# 1. Register app in Azure AD
# 2. Configure redirect URLs: https://yourdomain.com/api/auth/callback/azure-ad  
# 3. Set all AUTH_AZURE_AD_* variables
# 4. Set NEXT_PUBLIC_AZURE_AD_ENABLED=true
# 5. Generate secure NEXTAUTH_SECRET
# 6. Update NEXTAUTH_URL to your production domain