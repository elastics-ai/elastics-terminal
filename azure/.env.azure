# Azure Environment Configuration for Elastics Terminal

# Azure Configuration
AZURE_SUBSCRIPTION_ID=48894024-13ed-494a-b9dc-b3cfe44bd9f7
AZURE_RESOURCE_GROUP=elastics-terminal-rg
AZURE_LOCATION=eastus
AZURE_CONTAINER_REGISTRY=elasticsterminalacr
AZURE_CONTAINER_APP_ENVIRONMENT=elastics-terminal-env
AZURE_CONTAINER_APP_NAME=elastics-terminal-app

# Application Configuration
APP_NAME=elastics-terminal
CONTAINER_IMAGE=elasticsterminalacr.azurecr.io/elastics-terminal:latest

# Basic Authentication
BASIC_AUTH_EMAIL=wojciech@elastics.ai
BASIC_AUTH_PASSWORD=demo123!

# Database Configuration (Azure Database for PostgreSQL)
POSTGRES_SERVER=elastics-terminal-postgres
POSTGRES_DATABASE=elastics_terminal
POSTGRES_USER=elasticsadmin
POSTGRES_PASSWORD=
AZURE_DATABASE_URL=

# Redis Configuration (Azure Cache for Redis)
REDIS_HOSTNAME=elastics-terminal-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_SSL=true

# Application Environment Variables
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE
GLITCHTIP_DSN=
NEXT_PUBLIC_API_URL=https://elastics-terminal-app.azurecontainer.io
NEXT_PUBLIC_WS_URL=wss://elastics-terminal-app.azurecontainer.io
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PYTHONUNBUFFERED=1

# WebSocket Server Configuration
WS_HOST=0.0.0.0
WS_PORT=8765

# Volatility Filter Configuration
AUTO_OPTIMIZE=true
WINDOW_SIZE=100
AR_LAG=5
VOL_THRESHOLD=0.02
BROADCAST_EVENTS=true

# Options Filter Configuration
ENABLE_OPTIONS=true
OPTION_CURRENCY=BTC
OPTION_EXPIRY_DAYS=30
OPTION_STRIKE_RANGE=0.25
OPTION_IV_THRESHOLD=2.0
OPTION_IV_CHANGE_THRESHOLD=0.05
OPTION_GREEKS_INTERVAL=300
OPTION_CHAIN_INTERVAL=60

# Performance Configuration
BROADCAST_INTERVAL=1000
MAX_WEBSOCKET_CLIENTS=100
ENABLE_METRICS=true

# Monitoring
APPLICATION_INSIGHTS_CONNECTION_STRING=