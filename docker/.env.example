# Volatility Terminal Configuration

# Claude AI Configuration (required for CHAT function)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# Web App Configuration (new)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8765
NODE_ENV=production

# WebSocket Server Configuration
WS_HOST=0.0.0.0
WS_PORT=8765

# Database Configuration
DB_PATH=/data/volatility_filter.db
USE_DATABASE=true

# Volatility Filter Configuration
AUTO_OPTIMIZE=true
WINDOW_SIZE=100
AR_LAG=5
VOL_THRESHOLD=0.02
BROADCAST_EVENTS=true

# Options Filter Configuration
ENABLE_OPTIONS=true
OPTION_CURRENCY=BTC
OPTION_EXPIRY_DAYS=30
OPTION_STRIKE_RANGE=0.25
OPTION_IV_THRESHOLD=2.0
OPTION_IV_CHANGE_THRESHOLD=0.05
OPTION_GREEKS_INTERVAL=300
OPTION_CHAIN_INTERVAL=60

# Terminal Configuration (for legacy TUI)
TERM=xterm-256color

# Logging Configuration
LOG_LEVEL=INFO

# Performance Configuration
BROADCAST_INTERVAL=1000  # milliseconds between updates
MAX_WEBSOCKET_CLIENTS=100
ENABLE_METRICS=false